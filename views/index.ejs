<%- include('./partials/head') %>

<header>
    <div class="logo-container">
        <svg class="icon site-logo">
            <use xlink:href="/img/icons.svg#logo-full"></use>
        </svg>
    </div>
</header>

<section>
    <h2>Onze shows</h2>

    <div class="horizontal-flex-scroll-container">
        <% if (data && data.length) { %>
            <% data.forEach(collection => { %>
                <!-- Horizontal podcast item -->
                <a id="<%= collection.attributes.slug %>" href="/collection/<%= collection.attributes.slug %>" class="horizontal-flex-item">
                    <div class="horizontal-flex-podcast-image">
                        <!-- Hier komt de image cover van de podcast -->
                    </div>
                    <div class="horizontal-flex-podcast-title">
                        <p><%= collection.attributes.title %></p>
                    </div>
                </a>
            <% }); %>
        <% } else { %>
            <p class="error">Error loading podcasts</p>
        <% } %>
        
    </div>

</section>

